journal = {Frontiers in Human Neuroscience},
keywords = {active inference,allostasis,computational psychiatry,computational psychiatry, effective connectivity,,dynamic causal modeling,effective connectivity,frontiers in human neuroscience,frontiersin,homeostasis,multiple sclerosis,org,predictive coding,www},

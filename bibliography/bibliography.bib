issn = {1662453X},
journal = {Frontiers in Neuroscience},
keywords = {Cognitive control,Decision making,Energy,Glycogen,Mental effort,Optimal control},
number = {JUL},
pages = {1--15},
pmid = {26379482},
title = {{Cognitive cost as dynamic allocation of energetic resources}},
